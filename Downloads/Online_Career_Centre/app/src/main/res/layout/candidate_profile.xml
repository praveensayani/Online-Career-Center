<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <View
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Candidate Profile"
        android:textColor="@color/app_primary"
        android:textSize="30sp"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/name_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:hint="@string/hint_candidate_name"
            android:text=""
            android:id="@+id/username"
            android:textColor="@color/text_dark"
            android:textSize="30sp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/education_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:hint="@string/hint_qualification"
            android:text=""
            android:id="@+id/candidate_qualification"
            android:textColor="@color/text_dark"
            android:textSize="30sp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/email_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:hint="@string/hint_candidate_email"
            android:text=""
            android:id="@+id/candidate_email"
            android:textColor="@color/text_dark"
            android:textSize="30sp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/contacts_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:hint="@string/hint_candidate_contactno"
            android:text=""
            android:id="@+id/candidate_contactno"
            android:textColor="@color/text_dark"
            android:textSize="30sp"
            />
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
        android:id="@+id/view_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="View CV"
        android:textSize="14sp"
            android:textColor="@color/text_light"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:background="@color/app_primary"
        />
        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1" />
        <!--<Button
            android:id="@+id/update_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Update CV"
            android:textSize="14sp"
            android:textColor="@color/text_light"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:background="@color/app_primary"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1" />-->
        <Button
            android:id="@+id/change_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Change Password"
            android:textSize="14sp"
            android:textColor="@color/text_light"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:background="@color/app_primary"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/back_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Back"
            android:textSize="14sp"
            android:textColor="@color/text_light"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:background="@color/deep_orange"
            />
    </LinearLayout>

</LinearLayout>
</ScrollView>