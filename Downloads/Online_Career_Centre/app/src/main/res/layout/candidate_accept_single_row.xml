<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/elevation_large"
    card_view:cardBackgroundColor="@color/light_grey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:id="@+id/logo"
            android:src="@drawable/name_icon">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/candidate_name"
            android:layout_above="@+id/email"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/logo"
            android:layout_toEndOf="@+id/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/email"
            android:layout_above="@+id/contactno"
            android:layout_toRightOf="@+id/logo"
            android:layout_alignRight="@+id/candidate_name"
            android:layout_alignEnd="@+id/candidate_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/contactno"
            android:layout_alignBottom="@+id/logo"
            android:layout_toRightOf="@+id/logo"
            android:layout_alignRight="@+id/email"
            android:layout_alignEnd="@+id/email" />
    </RelativeLayout>

</android.support.v7.widget.CardView>

